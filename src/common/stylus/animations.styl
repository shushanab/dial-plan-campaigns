animateHeight(name = extendHeight, to = 100%, from = 0%) {
    @keyframes name {
        from { height: from; min-height: from; }
        to { height: to; min-height: to; }
    }
}

animateWidth(name = extendWidth, to = 100%, from = 0%) {
    @keyframes name {
        from { width: from; min-width: from; }
        to { width: to; min-width: to; }
    }
}

@keyframes fadeout {
    from { opacity: 0 }
    to { opacity: 1 }
}

@keyframes fadein {
    from { opacity: 1 }
    to { opacity: 0 }
}